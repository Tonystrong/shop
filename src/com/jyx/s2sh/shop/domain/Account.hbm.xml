<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.jyx.s2sh.shop.domain.Account" table="account">
        <id name="id" column="id" length="10" type="java.lang.Integer">
            <generator class="increment"></generator>
        </id>   
        <property name="name" length="40"></property> 
        <property name="login" length="40"></property>
        <property name="password" length="20"></property>
    </class>

</hibernate-mapping>